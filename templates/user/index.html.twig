{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Friends</th>
                <th>Name</th>
                <th>Prename</th>
                <th>Picture</th>
                <th>Address</th>
                <th>Bio</th>
                <th>State</th>
                <th>CreatedAt</th>
                <th>FacebookID</th>
                <th>FacebookAccessToken</th>
                <th>GoogleID</th>
                <th>GoogleAccessToken</th>
                <th>UserAccessToken</th>
                <th>Specifications</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.friends ? user.friends|json_encode : '' }}</td>
                <td>{{ user.Name }}</td>
                <td>{{ user.Prename }}</td>
                <td>{{ user.Picture }}</td>
                <td>{{ user.Address }}</td>
                <td>{{ user.Bio }}</td>
                <td>{{ user.State ? 'Yes' : 'No' }}</td>
                <td>{{ user.CreatedAt ? user.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.facebookID }}</td>
                <td>{{ user.facebookAccessToken }}</td>
                <td>{{ user.googleID }}</td>
                <td>{{ user.googleAccessToken }}</td>
                <td>{{ user.userAccessToken }}</td>
                <td>{{ user.Specifications ? user.Specifications|json_encode : '' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
